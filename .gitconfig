	name = simonk
	email = s.kopciewski@dlamnie.net
[core]
	editor = vim
[color]
	ui = true
[alias]
	glog = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	ci = commit
	co = checkout
	s = status
[init]
	defaultBranch = main
[pull]
	rebase = true
[push]
	default = simple
[merge]
	ff = only
